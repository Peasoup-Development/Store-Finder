<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd" layout="1column">
    <head>
        <css src="mage/gallery/gallery.css"/>
        <css src="Magento_Theme::css/slick.css"/>
        <css src="Magento_Theme::css/slick-theme.css"/>
    </head>
    <body>

        <referenceContainer name="content">
            <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.wrapper" template="Peasoup_Storefinder::view.phtml" before="-" >
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.notification" template="Peasoup_Storefinder::view/notification.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.introduction" template="Peasoup_Storefinder::view/introduction.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.information" template="Peasoup_Storefinder::view/information.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.directions" template="Peasoup_Storefinder::view/directions.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.opening.hours" template="Peasoup_Storefinder::view/opening-hours.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.gallery" template="Peasoup_Storefinder::view/gallery.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder" name="storefinder.view.map" template="Peasoup_Storefinder::index/map.phtml" before="-" />
            </block>
        </referenceContainer>

        <referenceBlock name="head.additional">
            <block class="Peasoup\Storefinder\Block\Storefinder" name="googlemaps.api" template="index/js/script.phtml" />
        </referenceBlock>

        <referenceBlock name="page.main.title" remove="true" />

    </body>
</page>

