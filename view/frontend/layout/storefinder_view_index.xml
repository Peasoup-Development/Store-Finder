<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd" layout="1column">
    <head>
        <css src="mage/gallery/gallery.css"/>
        <css src="Magento_Theme::css/slick.css"/>
        <css src="Magento_Theme::css/slick-theme.css"/>
    </head>
    <body>

        <referenceContainer name="content">
            <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.wrapper" template="view.phtml" before="-" >
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.intro" template="view/intro.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.information" template="view/information.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.directions" template="view/directions.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.opening.hours" template="view/opening-hours.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.gallery" template="view/gallery.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.view.reviews" template="view/reviews.phtml" before="-" />
                <block class="Peasoup\Storefinder\Block\Storefinder\View" name="storefinder.testimonials" template="view/testimonials.phtml" after="-">
                    <block class="Peasoup\Socialfeed\Block\Socialfeed\Testimonials\Container" name="testimonials_container" as="testimonials.container" >
                        <block class="Peasoup\Socialfeed\Block\Socialfeed\Testimonials\Container\Item" name="testimonials_item" as="testimonials.item"  template="Peasoup_Storefinder::view/testimonials/item.phtml" />
                    </block>
                </block>
                <block class="Peasoup\Storefinder\Block\Storefinder" name="storefinder.map" template="map.phtml" before="-" />
            </block>
        </referenceContainer>

        <referenceBlock name="head.additional">
            <block class="Peasoup\Storefinder\Block\Storefinder" name="googlemaps.api" template="index/js/script.phtml" />
        </referenceBlock>

        <referenceBlock name="page.main.title" remove="true" />

    </body>
</page>

